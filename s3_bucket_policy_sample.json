{
  "Version": "2012-10-17",
  "Id": "kopsPolicy",
  "Statement": [
    {
      "Sid": "AddKopsAllTheThings",
      "Effect": "Allow",
      "Principal": { "AWS": "arn:aws:iam::YOUR_AWS_ACCOUNT:user/YOUR_TERRAFORM_USER" },
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::YOUR_KOPS_BUCKET/*"
    }
  ]
}
